---
import '../styles/global.css';
import pikachuIcon from '@/assets/icons/pikachu.png?url';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'PokéMath - Learn Math, Catch Pokémon!',
  description = 'Master your math skills through exciting battles. Answer questions correctly to catch and collect Pokémon from Generation 1.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0f172a" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href={pikachuIcon} />
    <title>{title}</title>
  </head>
  <body
    class="min-h-screen text-slate-100 antialiased"
    style="
      --dashboard-bg-image: url('/dashboard_background_day.jpg');
      background-color: #0a1628;
      background-image: var(--dashboard-bg-image);
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      color: #f8fafc;
    "
  >
    <div class="min-h-screen bg-[rgba(10,22,40,0.65)]">
      <slot />
    </div>
    <script src="/dashboard-background.js" is:inline></script>
  </body>
</html>
