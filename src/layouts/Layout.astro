---
import '../styles/global.css';
import pikachuIcon from '@/assets/icons/pikachu.png?url';

interface Props {
  title?: string;
}

const { title = 'PokéMath - Learn Math, Catch Pokémon!' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={pikachuIcon} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
